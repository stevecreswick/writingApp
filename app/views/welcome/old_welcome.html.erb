        <form class="" action="/users" method="post">
          <div class="col-xs-4 col-xs-offset-2">
          <div class="form-group">
            <h3 class="welcome-sub-header">User Name</h3>
            <input type="text" name="user[username]" placeholder="...enter username" class="form-control">
          </div>
        </div>
        <div class="col-xs-4">
          <div class="form-group">
            <h3 class="welcome-sub-header">Profile Image URL</h3>
            <input type="text" name="user[image_url]" placeholder="...enter image url" class="form-control">
          </div>
        </div>
        <div class="col-xs-4 col-xs-offset-2">
          <div class="form-group">
            <h3 class="welcome-sub-header">Password</h3>
            <input type="password" name="user[password]" id="password" placeholder="...enter password" class="form-control">
          </div>
        </div>
        <div class="col-xs-4">
          <div class="form-group">
            <h3 class="welcome-sub-header">Repeat Password</h3>
            <input type="password" name="repeat_password" id="password-repeat" placeholder="...enter password" class="form-control">
          </div>
        </div>

        <div class="col-xs-4 col-xs-offset-4">
          <div class="form-group">
            <h3 class="welcome-sub-header">Email</h3>
            <input type="text" name="user[email]" placeholder="...enter email" class="form-control">
          </div>
        </div>
        <div class="col-xs-8 col-xs-offset-2">
          <div class="form-group text-right">
            <input type="submit" value="Join" class="btn btn-raised btn-success">
          </div>
        </div>
        </form>

    </div>

