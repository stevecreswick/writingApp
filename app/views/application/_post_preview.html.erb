<div class="col-xs-12 col-sm-4 col-sm-offset-2
col-md-3 col-md-offset-1">
  <div class="post-preview-container">
    
    <div class="row">
      <div class="col-xs-8">
        <h3 class="post-preview-title">
          <%%= title || "Untitled" %>
        </h3>
      </div>
      <div class="col-xs-4">
        <div class="post-created-at">
          <%%= created_at_in_words + " ago" || "" %>
        </div>
      </div>
    </div>

    <div class="post-preview-author-genre">
      <%%= genre.toLowerCase() || "Fiction" %> by <%%= username || "anonymous" %>
    </div>

    <p class="post-preview-snippet">
      <%%= message.substring(0,250) + "<br><br> Read more..." || "Click for more..." %>
    </p>
  </div>
</div>
