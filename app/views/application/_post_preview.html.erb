<div class="col-xs-12 col-sm-5">
  <div class="post-preview-container read-full-post">
    <div class="row">
      <div class="col-xs-8">
        <h3 class="post-preview-title">
          <%%= post.title ? post.title : "Untitled" %>
        </h3>
      </div>
      <div class="col-xs-4">
        <div class="post-created-at">
          <%%= post.created_at_in_words ? post.created_at_in_words + " ago" : "" %>
        </div>
      </div>
    </div>
    <div class="post-preview-author-genre">
      <%%= post.genre ? post.genre.toLowerCase() : "Fiction"  %> by <%%= post.username ? post.username : "anonymous" %>
    </div>
    <p class="post-preview-snippet">
      <%%= post.message ? post.message.substring(0,250) + "<br><br> Read more..." : "Click for more..." %>
    </p>
  </div>
  <input type="hidden" name="post[id]" id="post-preview-id" value="<%%= post.id ? post.id : 0 %>">
</div>
