<h3>EDIT <%= @user.username %> </h3>


<div class="row edit-row">
  <div class="col-xs-6">
    <form class="" action="/users/<%= @user.id %>" method="post">
      <input type="hidden" name="_method" value="put">
      <div class="form-group">
        <label for="edit-username">Username</label><br>
        <input type="text" name="user[username]" value="<%= @user.username %>">
      </div>
      <div class="form-group">
        <label>Profile Image URL</label><br>
        <input type="text" name="user[image_url]" value="<%= @user.image_url %>">
      </div>
      <div class="form-group">
        <label>Where are you from?</label><br>
        <input type="text" name="user[from]" value="<%= @user.from %>">
      </div>
  </div>
  <div class="col-xs-6">
      <div class="form-group">
        <label>Favorite Books</label><br>
        <input type="text" name="user[favorite_book]" value="<%= @user.favorite_book %>">
      </div>
      <div class="form-group">
        <label>Favorite Authors</label><br>
        <input type="text" name="user[favorite_author]" value="<%= @user.favorite_author %>">
      </div>
      <div class="form-group">
        <label>Favorite Genre</label><br>
        <input type="text" name="user[favorite_genre]" value="<%= @user.favorite_genre %>">
      </div>
    </div>
  </div>

  <div class="row edit-row">
    <div class="col-xs-12">
      <div class="form-group">
        <label>What is your writing goal?</label><br>
        <input type="text" name="user[writing_goal]" value="<%= @user.writing_goal %>">
      </div>
    </div>
  </div>

  <div class="row edit-row">
    <div class="col-xs-12">
      <div class="form-group">
        <label>Tell us about yourself.</label><br>
        <textarea type="text" name="user[about]" value="<%= @user.about %>"></textarea>
      </div>
    </div>
  </div>

  <div class="row edit-row">
    <div class="col-xs-12">
      <div class="form-group">
        <input type="submit" value="Update">
      </div>
    </div>
  </div>

    </form>
