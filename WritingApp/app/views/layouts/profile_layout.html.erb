<html>
<head>
  <title>Profile View</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script type="text/template" id='post-template'>
    <h3 class="post-header">
      Author: <%%= username %>
    </h3>

      <div class="post-box">
        <p>
          <%%= message %>
        </p>
      </div>
      <button type="button" class='remove btn btn-info'>
        Remove
      </button>
      <button type="button" class='make-critique btn btn-info'>
        Critique
      </button>
  </script>

  <script type="text/template" id="critique-template">
    Critique: <%%= message %>
  </script>




</head>
<body>

  <nav class="navbar navbar-default  navbar-fixed-top">
  <div class="container-fluid"  id="header">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Write Away</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">


      <ul class="nav navbar-nav navbar-right">
        <li><a href="#"><%= @user.username %></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
              <li><%= link_to 'Log Out', '/sessions', method: :delete  %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>




  <div class="container">
    <%= yield %>

  </div>

  <%= javascript_include_tag 'users', 'data-turbolinks-track' => true %>
</body>
</html>
