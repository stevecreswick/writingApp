<html>
<head>
  <title>Profile View</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

    <!-- Post Template -->
  <script type="text/template" id='post-template'>
    <!-- Header -->
    <h3 class="post-header">
    </h3>
    <button type="button" class='remove btn btn-info'>
      Remove
    </button>

    <!-- Main Post -->
      <div class="post-box">
        <p>
          Post:  <%%= message %>
        </p>
      </div>

    <!-- Critique Form -->
    <button type="button" class='make-critique btn btn-info'>
      Critique
    </button>
      <div class="critique-space">

      </div>

    <!-- Critique List View -->
    <div id="critique-list-view">

    </div>
  </script>

  <script type="text/template" id="critique-template">
    <div class="new-critique-form">
      <form id="create-critique">
        <input type="hidden" name="critique[user_id]" value="<%= @user.id %>">
        <textarea class= "form-control" id="critique-message" rows="10" name="critique[message]" placeholder="...enter critique"></textarea>
        <input type="hidden" name="critique[post_id]" id="critique-post-id">
        <input type="submit" value="Submit" class="btn btn-danger">
      </form>
      <button class="close-critique btn btn-danger">close</button>
    </div>
  </script>

  <script type="text/template" id="critique-form-template">
    <div class="new-critique-form">
      <form id="create-critique">
        <input type="hidden" name="critique[user_id]" value="<%= @user.id %>">
        <textarea class= "form-control" id="critique-message" rows="10" name="critique[message]" placeholder="...enter critique"></textarea>
        <input type="hidden" name="critique[post_id]" id="critique-post-id">
        <input type="submit" value="Submit" class="btn btn-danger">
      </form>
      <button class="close-critique btn btn-danger">close</button>
    </div>
  </script>




</head>
<body>

  <nav class="navbar navbar-default  navbar-fixed-top">
  <div class="container-fluid"  id="header">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Write Away</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">


      <ul class="nav navbar-nav navbar-right">
        <li><a href="#"><%= @user.username %></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
              <li><%= link_to 'Log Out', '/sessions', method: :delete  %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>




  <div class="container">
    <%= yield %>

  </div>

  <%= javascript_include_tag 'users', 'data-turbolinks-track' => true %>
</body>
</html>
