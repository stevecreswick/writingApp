          <ul class="nav navbar-nav navbar-right">
            <li><a href="#"><%= @user.username %></a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li class="add-friends"><a href="">Add Friends</a></li>
                <li class="show-friends"><a>Show Friends</a></li>
                <li class="render-friends"><a>Friends Page</a></li>
                <li role="separator" class="divider"></li>
                  <li><%= link_to 'Log Out', '/sessions', method: :delete  %></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid" id="main-display">

    <div class="row">
      <div class="col-xs-6">
        <div id="left-pane">
          <div class="new-post-box">

          </div>
        </div>

      </div>
        <div class="col-xs-6 ">
          <div id="right-pane">
            <div id="post-list">

            </div>
          </div>
        </div>
    </div>
  </div>
    </script>

